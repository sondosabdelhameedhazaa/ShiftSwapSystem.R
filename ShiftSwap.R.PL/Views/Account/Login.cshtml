@model ShiftSwap.R.PL.Dtos.LoginDto

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-6">
        <div class="card shadow-lg">
            <div class="card-header bg-primary text-white text-center">
                <h4>Login</h4>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label asp-for="IdentifierType" class="form-label">Login By</label>
                        <select asp-for="IdentifierType" class="form-control">
                            <option value="">-- Select --</option>
                            <option value="NTName">NTName</option>
                            <option value="HRID">HRID</option>
                            <option value="LoginId">Login ID</option>
                        </select>
                        <span asp-validation-for="IdentifierType" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Identifier" class="form-label">Identifier</label>
                        <input asp-for="Identifier" class="form-control" />
                        <span asp-validation-for="Identifier" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>

                    <div class="mt-3 text-danger text-center">
                        @Html.ValidationSummary()
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
