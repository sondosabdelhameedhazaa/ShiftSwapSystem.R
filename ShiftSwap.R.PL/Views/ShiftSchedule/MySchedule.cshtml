@model List<ShiftSwap.R.PL.Dtos.ShiftScheduleDto>

@{
    ViewData["Title"] = "My Schedule";
    var agentName = ViewBag.AgentName as string;
    var agentHRID = ViewBag.AgentHRID as string;
    var startDate = DateTime.Parse(ViewBag.StartDate as string);
    var endDate = DateTime.Parse(ViewBag.EndDate as string);
    var selectedWeek = ViewBag.Week as string ?? "this";
}


<style>
    :root {
        --raya-navy: #002147;
        --raya-cyan: #00a8e8;
    }

    h2 {
        color: var(--raya-navy);
        font-weight: 700;
        margin-bottom: 25px;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 16px rgba(0,0,0,0.12);
        margin-bottom: 25px;
    }

    .card-header {
        background: linear-gradient(135deg, var(--raya-navy), var(--raya-cyan));
        color: white;
        font-weight: 600;
        padding: 15px 20px;
    }

    .btn-raya {
        background: linear-gradient(135deg, var(--raya-navy), var(--raya-cyan));
        border: none;
        padding: 10px 18px;
        border-radius: 10px;
        color: white !important;
        font-weight: 600;
        transition: 0.3s ease;
    }

        .btn-raya:hover {
            opacity: 0.95;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    thead {
        background: var(--raya-navy);
        color: white;
    }

    tbody tr:hover {
        background-color: #f2f8ff;
    }

    .alert {
        border-radius: 12px;
        font-weight: 500;
    }

    select.form-select {
        border-radius: 0 10px 10px 0;
        padding: 10px 12px;
        transition: 0.3s ease;
    }

        select.form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(0, 168, 232, 0.25);
            border-color: var(--raya-cyan);
        }

    .input-group-text {
        border-radius: 10px 0 0 10px;
    }
</style>



<div class="card">
    <div class="card-header">
        <h4 class="mb-0">Schedule for @agentName (@agentHRID)</h4>
        <small class="d-block">(@startDate.ToString("dd-MMMM-yyyy") → @endDate.ToString("dd-MMMM-yyyy"))</small>
    </div>
    <div class="card-body">
        <!-- form البحث -->
        <form method="get" asp-action="MySchedule" class="mb-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-semibold mb-2">Select Week</label>
                    <select name="week" class="form-select shadow-sm" style="font-weight: 600; color: var(--raya-navy); border-radius: 10px;">
                        @for (int i = 1; i <= (int)ViewBag.CurrentWeek; i++)
                        {
                            var label = $"Week {i}";
                            if (i == (int)ViewBag.CurrentWeek)
                            {
                                label += " (This Week)";
                            }

                            <option value="@i" selected="@(ViewBag.SelectedWeek == i ? "selected" : null)">
                                @label
                            </option>
                        }

                        @{
                            var nextWeekNum = (int)ViewBag.CurrentWeek + 1;
                        }
                        <option value="next" selected="@(ViewBag.SelectedWeek == nextWeekNum ? "selected" : null)">
                            Week @nextWeekNum (Next Week)
                        </option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Select Day</label>
                    <input type="date" name="day" value="@(ViewBag.SelectedDay ?? "")" class="form-control" />
                </div>

                <div class="col-md-2">
                    <button type="submit" class="btn-raya w-100">Show</button>
                </div>
            </div>
        </form>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered align-middle">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Shift Start</th>
                            <th>Shift End</th>
                            <th>Agent Name</th>
                            <th>HRID</th>
                            <th>LOB</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var daysOfWeek = Enumerable.Range(0, (endDate - startDate).Days + 1)
                            .Select(offset => startDate.AddDays(offset))
                            .ToList();

                            foreach (var day in daysOfWeek)
                            {
                                var shiftsForDay = Model.Where(s => s.Date.Date == day.Date).ToList();

                                if (shiftsForDay.Any())
                                {
                                    foreach (var item in shiftsForDay)
                                    {
                                        <tr>
                                            <td>@item.Date.ToString("dd-MMMM-yyyy")</td>
                                            <td>@item.ShiftStart.ToString(@"hh\:mm")</td>
                                            <td>@item.ShiftEnd.ToString(@"hh\:mm")</td>
                                            <td>@item.AgentName</td>
                                            <td>@item.AgentHRID</td>
                                            <td>@item.LOB</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td>@day.ToString("dd-MMMM-yyyy")</td>
                                        <td colspan="5" class="text-center text-muted">No shift scheduled</td>
                                    </tr>
                                }
                            }
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mt-3">
                No shifts found for the selected week.
            </div>
        }
    </div>
</div>