@model List<ShiftSwap.R.PL.Dtos.ShiftScheduleDto>
@{
    ViewData["Title"] = "My Schedule";
    var agentName = ViewBag.AgentName as string;
    var agentHRID = ViewBag.AgentHRID as string;
    var startDate = DateTime.Parse(ViewBag.StartDate as string);
    var endDate = DateTime.Parse(ViewBag.EndDate as string);
    var selectedWeek = ViewBag.SelectedWeek as int? ?? 0;
    var selectedDay = ViewBag.SelectedDay as string ?? "";
}

<style>
    :root {
        --raya-navy: #002147;
        --raya-cyan: #00a8e8;
    }

    h2 {
        color: var(--raya-navy);
        font-weight: 700;
        margin-bottom: 25px;
    }

    .card {
        border-radius: 15px;
        overflow: hidden;
        box-shadow: 0 6px 16px rgba(0,0,0,0.12);
        margin-bottom: 25px;
    }

    .card-header {
        background: linear-gradient(135deg, var(--raya-navy), var(--raya-cyan));
        color: white;
        font-weight: 600;
        padding: 15px 20px;
    }

    .btn-raya {
        background: linear-gradient(135deg, var(--raya-navy), var(--raya-cyan));
        border: none;
        padding: 10px 18px;
        border-radius: 10px;
        color: white !important;
        font-weight: 600;
        transition: 0.3s ease;
    }

        .btn-raya:hover {
            opacity: 0.95;
            transform: translateY(-2px);
            box-shadow: 0 4px 10px rgba(0,0,0,0.2);
        }

    thead {
        background: var(--raya-navy);
        color: white;
    }

    tbody tr:hover {
        background-color: #f2f8ff;
    }

    .alert {
        border-radius: 12px;
        font-weight: 500;
    }

    select.form-select {
        border-radius: 0 10px 10px 0;
        padding: 10px 12px;
        transition: 0.3s ease;
    }

        select.form-select:focus {
            box-shadow: 0 0 0 0.2rem rgba(0, 168, 232, 0.25);
            border-color: var(--raya-cyan);
        }

    .input-group-text {
        border-radius: 10px 0 0 10px;
    }
</style>





<div class="card">
    <div class="card-header">
        <h4 class="mb-0">Schedule for</h4>
        <p class="mb-0"><strong></strong> @agentName</p>
        <p class="mb-0"><strong>HRID :</strong> @agentHRID</p>
        <small class="d-block">(@startDate.ToString("dd-MMMM-yyyy") → @endDate.ToString("dd-MMMM-yyyy"))</small>
    </div>
    </div>
    <div class="card-body">
        <form method="get" asp-action="MySchedule" class="mb-4">
            <div class="row g-3 align-items-end">
                <div class="col-md-3">
                    <label class="form-label fw-semibold mb-2">Select Week</label>
                    <select name="week" class="form-select shadow-sm">
                        @for (int i = 1; i <= (int)ViewBag.CurrentWeek; i++)
                        {
                            <option value="@i" selected="@(selectedWeek == i ? "selected" : null)">Week @i</option>
                        }
                        <option value="next" selected="@(selectedWeek == ((int)ViewBag.CurrentWeek + 1) ? "selected" : null)">Next Week</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Select Day</label>
                    <input type="date" name="day" value="@selectedDay" class="form-control" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn-raya w-100">Show</button>
                </div>
            </div>
        </form>

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Shift Start</th>
                            <th>Shift End</th>
                            <th>LOB</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.OrderBy(s => s.Date))
                    {
                        <tr>
                            <td>
                                @item.Date.ToString("dddd, dd-MMMM")  
                            </td>
                            <td>
                                @(item.Shift == "OFF" ? "OFF" : item.ShiftStart.ToString(@"hh\:mm"))
                            </td>
                            <td>
                                @(item.Shift == "OFF" ? "OFF" : item.ShiftEnd.ToString(@"hh\:mm"))
                            </td>
                            <td>@item.LOB</td>
                        </tr>
                    }


                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info mt-3">
                No shifts found for the selected week or day.
            </div>
        }
    </div>
</div>
