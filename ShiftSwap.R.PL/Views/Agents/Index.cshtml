@using ShiftSwap.R.PL.Dtos
@model IEnumerable<AgentReadDto>

@{
    ViewData["Title"] = "Agents";
}

<h1>Agents List</h1>

<!-- ✅ فورم البحث -->
<form asp-action="Index" method="get" class="mb-3 d-flex gap-2">
    <input type="text" name="search" class="form-control"
           placeholder="Search by Name, HRID, or LoginID"
           value="@ViewBag.Search" />
    <button type="submit" class="btn btn-primary">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Reset</a>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Agent</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>HRID</th>
            <th>LoginID</th>
            <th>NTName</th>
            <th>Role</th>
            <th>Project</th>
            <th>Team Leader</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var agent in Model)
            {
                <tr>
                    <td>@agent.Name</td>
                    <td>@agent.HRID</td>
                    <td>@agent.LoginID</td>
                    <td>@agent.NTName</td>
                    <td>@agent.Role</td>
                    <td>@agent.ProjectName </td>
                    <td>@agent.TeamLeaderName </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@agent.Id" class="btn btn-info btn-sm">Details</a>
                        @* <a asp-action="Edit" asp-route-id="@agent.Id" class="btn btn-warning btn-sm">Edit</a> *@
                        @* <a asp-action="Delete" asp-route-id="@agent.Id" class="btn btn-danger btn-sm">Delete</a> *@
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8" class="text-center">No Agents Found</td>
            </tr>
        }
    </tbody>
</table>
