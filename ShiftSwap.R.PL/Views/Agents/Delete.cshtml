@using ShiftSwap.R.PL.Dtos
@model AgentDetailsDto

@{
    ViewData["Title"] = "Delete Agent";
}

<h1>Delete Agent</h1>
<h3>Are you sure you want to delete this Agent?</h3>
<hr />

<!-- Error message if deletion is blocked -->
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

<div>
    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.HRID)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.HRID)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.LoginID)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.LoginID)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.NTName)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.NTName)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Role)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Role)</dd>

        <dt class="col-sm-3">Project</dt>
        <dd class="col-sm-9">@Model.ProjectName</dd>

        <dt class="col-sm-3">Team Leader</dt>
        <dd class="col-sm-9">@Model.TeamLeaderName</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger" @(!ViewData.ModelState.IsValid ? "disabled" : "")>Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
