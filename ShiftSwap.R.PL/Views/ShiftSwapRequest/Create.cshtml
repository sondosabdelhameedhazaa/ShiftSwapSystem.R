@model ShiftSwap.R.PL.Dtos.ShiftSwapRequestCreateDto

@{
    ViewData["Title"] = "Create Swap Request";
    var agents = ViewBag.TargetAgents as List<SelectListItem>;
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="TargetAgentId">Target Agent</label>
        <select asp-for="TargetAgentId" class="form-control" asp-items="agents">
            <option value="">-- Select Agent --</option>
        </select>
        <span asp-validation-for="TargetAgentId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SwapDate">Swap Date</label>
        <input asp-for="SwapDate" type="date" class="form-control" />
        <span asp-validation-for="SwapDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Comment">Comment</label>
        <textarea asp-for="Comment" class="form-control" rows="4" placeholder="Optional..."></textarea>
        <span asp-validation-for="Comment" class="text-danger"></span>
    </div>

    <div class="d-flex justify-content-between">
        <button type="submit" class="btn btn-success">Submit</button>
        <a asp-action="MyRequests" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

